(ns ui.status
  (:import [goog.string.format])
  (:require
    [clicker.util :as u]
    [clicker.engine :as e]
    [data.db :as db]
    [goog.string :as gstring]
    [goog.string.format]))
;
(defelem ^:private show-updates [{:keys [state]} kids]
  (let [thing (cell= (str (e/get-latest-new-thing state)))
        ticker-text (cell= (e/get-latest-ticker state))]
    (div :class "ticker"
      (p
        (cell= (span :style "padding-right: 20px" thing))
        (span ticker-text)))))
